    "version": "0.2.0",
    "configurations": [
        {
            "name": "ts by node",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--experimental-strip-types", "--trace-warnings"],
            "args": [
                "${relativeFile}"
            ],
            // "runtimeArgs": [
            //     "ts-node"
            // ],
            "cwd": "${workspaceRoot}",
            // "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "Launch Current Opened File",
          "program": "${file}"
        }
    ]
}